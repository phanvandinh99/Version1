
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hệ thống Quản lý Ký túc xá - @ViewBag.Title</title>
    <link href="~/Public/Public/css/all.min.css" rel="stylesheet" />
    <link href="~/Public/Public/css/LayoutAdmin.css" rel="stylesheet" />>
    <!-- Latest compiled and minified CSS
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    -->
    <!-- Optional theme
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    -->
    @*link fontawesome version 4.7*@
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        table, th, td {
            border: 2px solid #ccc;
        }

        table {
            border-collapse: collapse;
        }

        tr:hover {
            background-color: #ddd;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #000000;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("HỆ THỐNG QUẢN LÝ KÝ TÚC XÁ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse bg-dark">
                <div class="nav navbar-nav navbar-right">
                    @*<button class="btn btn-primary navbar-btn"><span class="glyphicon glyphicon-user"></span> Hồ sơ</button>*@
                    <button class="btn btn-default navbar-btn"><span class="glyphicon glyphicon-log-in"></span> @Html.ActionLink("Đăng xuất", "Logout", "Login")</button>
                </div>
            </div>
        </div>
    </div>
    <div class="navbar navbar-inverse" style="background-color: #0094ff">
        <div class="container">
            <div class="navbar-collapse collapse bg-dark">
                <div class="nav navbar-nav">
                    <button class="btn btn-default navbar-btn"><span class="glyphicon glyphicon-th-list"></span> @Html.ActionLink("Cán bộ", "Index", "Canbo")</button>
                    <button class="btn btn-default navbar-btn"><span class="glyphicon glyphicon-th-list"></span> @Html.ActionLink("Nhân viên", "Index", "Nhanvien")</button>
                    <button class="btn btn-default navbar-btn"><span class="glyphicon glyphicon-th-list"></span> @Html.ActionLink("Dãy phòng", "Index", "Dayphong")</button>
                    <button class="btn btn-default navbar-btn"><span class="glyphicon glyphicon-th-list"></span> @Html.ActionLink("Phòng", "Index", "Phong")</button>
                    <button class="btn btn-default navbar-btn"><span class="glyphicon glyphicon-th-list"></span> @Html.ActionLink("Đơn giá", "Index", "Dongia")</button>
                    <button class="btn btn-default navbar-btn"><span class="glyphicon glyphicon-th-list"></span> @Html.ActionLink("Hỗ trợ", "Index", "Hotro")</button>
                    <button class="btn btn-default navbar-btn"><span class="glyphicon glyphicon-th-list"></span> @Html.ActionLink("Hóa đơn điện nước", "Index", "HOADON_DIENNUOC")</button>
                    <button class="btn btn-default navbar-btn"><span class="glyphicon glyphicon-th-list"></span> @Html.ActionLink("Hóa đơn phòng", "Index", "HOADON_PHONG")</button>
                    <button class="btn btn-default navbar-btn"><span class="glyphicon glyphicon-th-list"></span> @Html.ActionLink("Đăng ký phòng cho nhân viên", "Index", "ThemNV")</button>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year Quản lý Ký Túc Xá Đại Học Cần Thơ - SVTH: Nhâm Hữu Nghĩa </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>